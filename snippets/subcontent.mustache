<!-- start snippet "SubContent" -->
  <div class="content container-fluid">

  <div class="row">
    {{# format.fullpage }}
      <div class="col-sm-12 header-fullpage">
        <div class="middle">
          {{# title }}
          <h1>{{ title }}</h1>
          {{/ title }}
          {{# subtitle }}
          <h2>{{ subtitle }}</h2>
          {{/ subtitle }}
        </div>
      </div><!-- / .header-fullpage -->
    {{/ format.fullpage }}

    {{^ format.fullpage }}
      <div class="col-sm-12 header">
        {{# title }}
        <h1>{{ title }}</h1>
        {{/ title }}
        {{# subtitle }}
        <h2>{{ subtitle }}</h2>
        {{/ subtitle }}
      </div><!-- / .header -->
    {{/ format.fullpage }}
  </div><!-- / .row -->

  {{# text }}
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 text">
        {{{ text }}}
      </div>
    </div><!-- / .row -->
  {{/ text }}

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 text">
      {{{ intro }}}
      {{# snippets }}
        {{# src }}
        <figure class="cms-image {{ align }}" style="max-width: 360px;">
          <img src="{{{ src }}}" style="max-width: 100%" rel="resizable" alt="" />
          <figcaption>{{{{ title }}}
             <span class="photographer">
               {{{ credits }}}
             </span>
          </figcaption>
        </figure>
        {{/ src }}
        {{{ text }}}
      {{/ snippets }}
    </div><!-- / .text -->
  </div><!-- / .row -->

  </div><!-- / .content -->

{{# text }}
  <div class="background_gradient"></div>
{{/ text }}
<!-- end snippet "SubContent" -->
