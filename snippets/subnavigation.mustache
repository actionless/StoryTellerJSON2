{{#navigation}}

  {{^navigation.first-level}}
    <li class="child">
      <a href="#{{id}}" data-articleNumber="{{id}}" title="{{#navtitle}}{{navtitle}}{{/navtitle}}{{^navtitle}}{{title}}{{/navtitle}}">
        {{#navtitle}}{{navtitle}}{{/navtitle}}
        {{^navtitle}}{{title}}{{/navtitle}}
      </a>
    </li><!-- / .child -->
  {{/navigation.first-level}}

  {{#navigation.first-level}}
    <li class="first-level">
      <a href="#{{id}}" data-articleNumber="{{id}}" title="{{#navtitle}}{{navtitle}}{{/navtitle}}{{^navtitle}}{{title}}{{/navtitle}}">
        <span>{{.}}</span>
        <p>
            {{#navtitle}}{{navtitle}}{{/navtitle}}
            {{^navtitle}}{{title}}{{/navtitle}}
        </p>
      </a>
      
      <ul>
        <figure>
          <a href="#{{id}}" title="{{#navtitle}}{{navtitle}}{{/navtitle}}{{^navtitle}}{{title}}{{/navtitle}}">
            <img src="{{thumb}}" />
          </a>
        </figure>
  {{/navigation.first-level}}

  {{#navigation.close-first-level}}
      </ul>
    </li><!-- / .first-level -->
  {{/navigation.close-first-level}}

{{/navigation}}
